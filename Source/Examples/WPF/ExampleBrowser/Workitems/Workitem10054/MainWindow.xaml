<Window x:Class="Workitem10054.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:h="http://helix-toolkit.org/wpf"
        Title="Workitem 10054: TubeVisual3D" Height="600" Width="800">
    <Grid>
        <h:HelixViewport3D ZoomExtentsWhenLoaded="True">
            <h:SunLight/>
            <h:TubeVisual3D Material="{h:Material Green}" Diameter="0.03" SectionXAxis="0,1,0" IsPathClosed="True" Path="-2.5,-2.5,0 2.5,-2.5,0 2.5,2.5,0 -2.5,2.5,0"/>
            <h:TubeVisual3D Material="{h:Material Orange}" Diameter="0.03" IsPathClosed="True" Path="2.5,-2.5,2 2.5,2.5,2 -2.5,2.5,2 -2.5,-2.5,2"/>
        </h:HelixViewport3D>
    </Grid>
</Window>
