<Window x:Class="Terrain.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:h="http://helix-toolkit.org/wpf"
        xmlns:local="clr-namespace:Terrain"
        mc:Ignorable="d"
        Title="Terrain"
        Height="480"
        Width="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <ComboBox ItemsSource="{Binding SourceKeys}"
                  SelectedItem="{Binding SelectedSourceKey}"
                  Grid.Row="0"
                  Width="300"
                  HorizontalAlignment="Left"/>

        <h:HelixViewport3D x:Name="view1"
                           ShowCameraInfo="True"
                           Grid.Row="1">
            <h:DefaultLights />
            <h:TerrainVisual3D Source="{Binding SelectedSource}"
                               Model="{Binding SelectedModel}" />
            <h:CubeVisual3D />
        </h:HelixViewport3D>
    </Grid>
</Window>
