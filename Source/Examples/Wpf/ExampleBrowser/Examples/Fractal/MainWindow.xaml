<Window x:Class="Fractal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:h="http://helix-toolkit.org/wpf"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:local="clr-namespace:Fractal"
        mc:Ignorable="d"
        Title="{Binding Type, StringFormat=Fractal - {0}}"
        Height="480"
        Width="640"
        Cursor="{Binding CurrentCursor}">
    <Window.Resources>
        <local:ValueToBoolConverter x:Key="ValueToBoolConverter" />
    </Window.Resources>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Export..."
                          Click="Export_Click" />
                <Separator />
                <MenuItem Header="E_xit"
                          Click="Exit_Click" />
            </MenuItem>
            <MenuItem Header="Fractal">

                <!-- todo: would like to use an itemsource, but can't get it to work properly -->
