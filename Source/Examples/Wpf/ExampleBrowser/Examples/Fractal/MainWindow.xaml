                <!-- http://www.julmar.com/blog/mark/2009/04/29/MenusAndMVVM2.aspx -->

                <MenuItem Header="Mandelbrot set"
                          IsCheckable="True"
                          IsChecked="{Binding Type, Mode=TwoWay, Converter={StaticResource ValueToBoolConverter}, ConverterParameter={x:Static local:FractalType.MandelbrotMountain}}" />
                <MenuItem Header="Menger sponge"
                          IsCheckable="True"
                          IsChecked="{Binding Type, Mode=TwoWay, Converter={StaticResource ValueToBoolConverter}, ConverterParameter={x:Static local:FractalType.MengerSponge}}" />
                <MenuItem Header="Sierpinski pyramid"
                          IsCheckable="True"
                          IsChecked="{Binding Type, Mode=TwoWay, Converter={StaticResource ValueToBoolConverter}, ConverterParameter={x:Static local:FractalType.SierpinskiPyramid}}" />
                <MenuItem Header="Plant"
                          IsCheckable="True"
                          IsChecked="{Binding Type, Mode=TwoWay, Converter={StaticResource ValueToBoolConverter}, ConverterParameter={x:Static local:FractalType.Plant}}" />
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Zoom extents"
                          Click="ZoomExtents_Click" />
            </MenuItem>
        </Menu>
        <Grid>
            <h:HelixViewport3D x:Name="view1"
                               Background="Black">
                <h:DefaultLights />
                <!--   <h:PlaneVisual3D Origin="0 0 -0.55" Width="20" Length="20"  Normal="0 0 1" Fill="Black"/> -->
                <ModelVisual3D Content="{Binding Model}" />
            </h:HelixViewport3D>
            <ComboBox ItemsSource="{Binding Levels}"
                      SelectedItem="{Binding Level}"
                      Width="100"
                      ToolTip="Level"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Top"
                      Margin="10"
                      Opacity="0.5" />
            <TextBlock Text="{Binding TriangleCount, StringFormat=Triangles: {0}}"
                       Margin="10"
                       Foreground="White"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Bottom" />
        </Grid>
    </DockPanel>
</Window>
